<?xml version="1.0"?>
<ruleset name="Laravel">
    <!-- Menggunakan standar PSR-12 -->
    <rule ref="PSR12"/>

    <!-- Folder yang akan diperiksa -->
    <file>app</file>

    <!-- Opsional: Mengabaikan folder tertentu -->
    <exclude-pattern>app/Exceptions/Handler.php</exclude-pattern>

    <!-- Opsional: Menampilkan progress -->
    <arg name="colors"/>
    <arg value="p"/>
</ruleset>